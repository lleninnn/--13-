def main():
    current_color = "Red"
    while True:
        print(f"Current color: {current_color}")
        try:
            choice = int(input("\nSelect a new color (1: Red, 2: Green): "))
        except ValueError:
            continue
        if choice == 1:
            current_color = "Red"
        elif choice == 2:
            current_color = "Green"
        else:
            current_color = "The traffic light is broken,choose the suggested answer -_-"

if __name__ == "__main__":
    main()
